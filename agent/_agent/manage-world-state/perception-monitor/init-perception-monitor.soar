sp {top-state*apply*init-agent*create*perception-monitor
   (state <s> ^top-state <s>
              ^world-usage external
              ^operator.name init-agent)
-->
   (<s> ^perception-monitor <mon>)
   (<mon> ^change-info <info> 
          ^changes <changes>
          ^object-monitor <obj-mon>
          ^predicate-monitor <pred-mon>)
}

