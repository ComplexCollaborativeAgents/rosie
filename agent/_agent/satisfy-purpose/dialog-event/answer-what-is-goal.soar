sp {dialog-event*propose*answer-what-is-goal
   (state <s> ^name dialog-event
              ^purpose <p>
              -^goal)
   (<p> ^type agent-goal-description
        ^parameters <params>)
   (<params> ^gtype <value>
             ^game <game>)
-->
   (<s> ^operator <o> +)
   (<o> ^name answer-what-is-goal
        ^gtype <value>
        ^game <game>)
}

