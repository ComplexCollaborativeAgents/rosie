sp {action*problem-space*simulate*composite*elaborate*problem-space
   (state <s> ^superstate.problem-space <ss-ps>
              ^superstate.operator <ss-op>)
   (<ss-ps> ^name action
            ^action.type simulate)
   (<ss-op> ^action-handle <h>)
-->
   (<s> ^problem-space <ps>)
   (<ps> ^name action
         ^action <action>
         ^learning <learn>
         ^world <world>
         ^perception <perc>)
   (<action> ^type simulate
             ^propose-action-operators true)
   (<world> ^copy-type shallow)
   (<perc> ^attend-to-all-perception no)
}
