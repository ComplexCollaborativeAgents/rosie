####################################################
# concept arguments

sp {learn-copy-action-elaboration-rule*propose*copy-argument*concept
   (state <s> ^name learn-copy-action-elaboration-rule
              ^copy-action.copy-argument <arg>)
   (<arg> ^arg-type concept
          ^source-arg.handle <h>
         -^arg-copy)
-->
   (<s> ^operator <o> + =)
   (<o> ^name copy-argument
        ^argument <arg>
        ^arg-type concept
        ^handle <h>)
}

sp {learn-copy-action-elaboration-rule*apply*copy-argument*concept
   (state <s> ^name learn-copy-action-elaboration-rule
              ^operator <o>)
   (<o> ^name copy-argument
        ^argument <arg>
        ^arg-type concept
        ^handle <h>)
-->
   (<arg> ^arg-copy <copy>)
   (<copy> ^arg-type concept
           ^handle <h>)
}
