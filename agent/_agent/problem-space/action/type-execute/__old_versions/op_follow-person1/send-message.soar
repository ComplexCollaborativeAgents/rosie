sp {op_follow-person1*propose*send-message
  (state <s> ^name op_follow-person1
             ^current-action <a>)
  (<a> -^sent-message)
-->
  (<s> ^operator <o> + >)
  (<o> ^name send-message)
}

sp {op_follow-person1*apply*send-message
  (state <s> ^name op_follow-person1
             ^operator.name send-message
             ^current-action <a>
             ^top-state.interaction.changes <c>)
-->
   (<c> ^outgoing-message <msg>)
   (<msg> ^type simple-message
          ^message-type ok)
   (<a> ^sent-message true)
}

