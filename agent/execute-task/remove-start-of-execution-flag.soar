# remove the start-of-execution flag when we first see the task

sp {execute-task*propose*remove-start-of-execution-flag
   (state <s> ^name execute-task
              ^task-stack.top <top>)
   (<top> ^start-of-execution <flag>)
-->
   (<s> ^operator <o> +)
   (<o> ^name remove-start-of-execution-flag)
}

sp {execute-task*apply*remove-start-of-execution-flag
   (state <s> ^name execute-task
              ^operator.name remove-start-of-execution-flag
              ^task-stack.top <top>)
   (<top> ^start-of-execution <flag>)
-->
   (<top> ^start-of-execution <flag> -)
}
