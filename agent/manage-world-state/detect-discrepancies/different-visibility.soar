#########################################################
#
# Discrepancy: different-visibility
#   The visibilitiy predicate on the object doesn't match perception
# Handling: attend-to-perception/different-visibility
#
#########################################################

sp {perception-monitor*detect-discrepancies*different-visibility*visible
   (state <s> ^superstate nil
              ^perception-monitor <perc-mon>)
   (<perc-mon> ^discrepancies <discs>
               ^object-monitor.object-info <obj-info>)
   (<obj-info> ^status.is-visible1 visible1
              -^wm-obj.predicates.is-visible1 visible1)
-->
   (<discs> ^different-visibility <disc>)
   (<disc> ^object-info <obj-info> 
           ^is-visible1 visible1)
}

sp {perception-monitor*detect-discrepancies*different-visibility*not-visible
   (state <s> ^superstate nil
              ^perception-monitor <perc-mon>)
   (<perc-mon> ^discrepancies <discs>
               ^object-monitor.object-info <obj-info>)
   (<obj-info> ^status.is-visible1 not-visible1
              -^wm-obj.predicates.is-visible1 not-visible1)
-->
   (<discs> ^different-visibility <disc>)
   (<disc> ^object-info <obj-info> 
           ^is-visible1 not-visible1)
}

