#########################################################
#
# Discrepancy: new-perception-object
#   There is an object in perception that is not in belief
# Params: 
#   perception-obj <obj> - The perception object (from input-link)
# Handling:
#   attend-to-perception: new-perception-object
#
#########################################################

sp {detect-discrepancies*new-perception-object*elaborate*perception-monitor*discrepancies*new-perception-object
   (state <s> ^superstate nil
              ^perception-monitor <perc-mon>)
   (<perc-mon> ^input-link.objects.object <il-obj>
               ^object-monitor <obj-mon>
               ^discrepancies <discs>)
   (<obj-mon> -^object-info.perception-obj <il-obj>)
-->
   (<discs> ^new-perception-object <npo>)
   (<npo> ^perception-obj <il-obj>)
}


