# When the construct-task-operator substate is finished (no other operators)
#    create a new task segment to be pushed onto the task-stack
                                                        
sp {construct-task-operator*propose*create-new-task-segment
   (state <s> ^name construct-task-operator
              ^task-operator <op>
             -^new-task-segment)
-->
   (<s> ^operator <o> +)
   (<o> ^name create-new-task-segment)
}

sp {construct-task-operator*apply*create-new-task-segment
   (state <s> ^name construct-task-operator
              ^operator.name create-new-task-segment
              ^command-message <msg>
              ^task-operator <op>)
   (<msg> -^task-source)
-->
   (<s> ^new-task-segment <task>)
   (<task> ^task-operator <op>)
}

sp {construct-task-operator*apply*create-new-task-segment*task-subtask
   (state <s> ^name construct-task-operator
              ^operator.name create-new-task-segment
              ^command-message <msg>
              ^task-operator <op>
              ^top-state.task-stack <stack>)
   (<msg> ^task-source <src>)
-->
   (<s> ^new-task-segment <task>)
   (<task> ^task-source <src>
           ^task-operator <op>)
}

