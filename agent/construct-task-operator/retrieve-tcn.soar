### task-concept-network - the TCN for the task

# look up the task in smem
sp {construct-task-operator*elaborate*smem-query*task
   (state <s> ^name construct-task-operator
              ^command-message.action.handle <task-handle>)
-->
   (<s> ^smem-query <q>)
   (<q> ^cue.handle <task-handle>
        ^depth 8)
}

# copy the result as task-concept-network
sp {construct-task-operator*elaborate*smem-query*result*task-concept-network
   (state <s> ^name construct-task-operator
              ^command-message.action.handle <task-handle>
              ^smem-query <q>)
   (<q> ^cue.handle <task-handle>
        ^result <lti>)
-->
   (<s> ^task-concept-network <lti>)
}

