sp {learn-task-goal*propose*report-success
   (state <s> ^name learn-task-goal
              ^goal-node <goal>
              ^stored <goal>)
-->
   (<s> ^operator <o> +)
   (<o> ^name report-success)
}

sp {learn-task-goal*apply*report-success
   (state <s> ^name learn-task-goal
              ^operator.name report-success
              ^top-state.interaction.status <status>)
-->
   (<status> ^performed.task-event.type learned-task-goal)
}

sp {learn-task-goal*apply*report-success*remove*learn-task-goal
   (state <s> ^name learn-task-goal
              ^operator.name report-success
              ^task-goal <goal>
              ^top-state.task-stack.bottom <seg>)
   (<seg> ^learn-task-goal <goal>)
-->
   (<seg> ^learn-task-goal <goal> -)
}
