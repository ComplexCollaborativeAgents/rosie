sp {subproblem*execute*propose*initiate-interaction*ask-for-goal
   (state <s> ^problem-space.subproblem execute
              ^initiate-interaction ask-for-goal
              ^task-operator <task-op>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name initiate-interaction
        ^type ask-for-goal
        ^task-operator <task-op>)
}

sp {subproblem*execute*apply*initiate-interaction*ask-for-goal*mark*learning*needed
   (state <s> ^problem-space.subproblem execute
              ^operator <o>
              ^current-task-segment <seg>)
   (<o> ^name initiate-interaction
        ^type ask-for-goal)
-->
   (<seg> ^policy-learning-needed true)
}

