# If there is no goal, ask the instructor

sp {subproblem*execute*propose*initiate-interaction*get-next-goal
   (state <s> ^problem-space.subproblem execute
             -^desired
              ^task-operator <task-op>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name initiate-interaction
        ^type get-next-goal
        ^task-operator <task-op>)
}

sp {subproblem*execute*propose*initiate-interaction*get-next-goal*no*next
   (state <s> ^problem-space.subproblem execute
              ^desired.satisfied true
              ^task-operator <task-op>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name initiate-interaction
        ^type get-next-goal
        ^task-operator <task-op>)
}

sp {subproblem*execute*apply*initiate-interaction*get-next-goal*mark*learning*needed
   (state <s> ^problem-space.subproblem execute
              ^operator <o>
              ^current-task-segment <seg>)
   (<o> ^name initiate-interaction
        ^type get-next-goal)
-->
   (<seg> ^policy-learning-needed true)
}

