sp {learn-task-goal*propose*report-failure*no*action
   (state <s> ^name learn-task-goal
             -^task-concept-network)
-->
   (<s> ^operator <o> + <)
   (<o> ^name report-failure
        ^failure-type no-action-context-for-goal)
}

sp {learn-task-goal*apply*report-failure
   (state <s> ^name learn-task-goal
              ^operator <o>
              ^top-state.interaction.status <status>)
   (<o> ^name report-failure
        ^failure-type <type>)
-->
   (<status> ^failure.type <type>)
}
