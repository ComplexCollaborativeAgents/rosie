###################################################################
#
# problem-space.propose-subtasks << true false >>
#   If true, proposes operators for the primitive actions, including:
#
###################################################################

## op_turn-on1

sp {action*execution-type*internal*propose*op_turn-on1*has*door
   (state <s> ^problem-space <ps>
              ^world.objects.object <obj>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<obj> ^predicates <preds>)
   (<preds> ^visible true
            ^activation1 off2
            ^door2 closed2)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-on1 
         ^item-type task-operator
         ^task-handle turn-on1
         ^arg1 <arg1>)
   (<arg1> ^arg-type object
           ^id <obj>)
}

sp {action*execution-type*internal*propose*op_turn-on1*no*door
   (state <s> ^problem-space <ps>
              ^world.objects.object <obj>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<obj> ^predicates <preds>)
   (<preds> ^visible true
            ^activation1 off2
           -^door2)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-on1 
         ^item-type task-operator
         ^task-handle turn-on1
         ^arg1 <arg1>)
   (<arg1> ^arg-type object
           ^id <obj>)
}

