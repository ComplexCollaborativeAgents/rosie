# duration (after 3 minutes)
sp {generalize-task-operator*propose*generalize-task-argument*after-clause*duration
  (state <s> ^name generalize-task-operator
             ^generalize-task-argument <arg>)
  (<arg> ^instantiation <i>
        -^general-arg-rep)
  (<i> ^arg-type after-clause
       ^predicate <pred>)
   (<pred> ^type duration 
           ^number <num>
           ^unit <unit>)
-->
  (<s> ^operator <o> + =)
  (<o> ^name generalize-task-argument
       ^argument <arg>
       ^arg-type after-clause
       ^match-type procedural
       ^pred-type duration
       ^number <num>
       ^unit <unit>)
}

sp {generalize-task-operator*apply*generalize-task-argument*after-clause*duration
  (state <s> ^name generalize-task-operator
             ^operator <o>)
  (<o> ^name generalize-task-argument
       ^argument <arg>
       ^arg-type after-clause
       ^pred-type duration
       ^number <num>
       ^unit <unit>)
-->
  (<arg> ^general-arg-rep <gen>)
  (<gen> ^arg-type after-clause
         ^predicate <pred>)
   (<pred> ^type duration 
           ^number <num>
           ^unit <unit>)
}


