# Duration (after 3 minutes)
sp {instantiate-task-operator*propose*instantiate-task-argument*after-clause*duration
   (state <s> ^name instantiate-task-operator
              ^instantiate-task-argument <arg>)
  (<arg> ^general-arg-rep <gen>
          -^instantiation)
  (<gen> ^arg-type after-clause
         ^predicate <pred>)
  (<pred> ^type duration
          ^number <num>
          ^unit <unit>)
-->
  (<s> ^operator <o> + =)
  (<o> ^name instantiate-task-argument
       ^argument <arg>
       ^match-type procedural
       ^arg-type after-clause
       ^pred-type duration
       ^number <num>
       ^unit <unit>)
}

sp {instantiate-task-operator*apply*instantiate-task-argument*after-clause*duration
  (state <s> ^name instantiate-task-operator
             ^operator <o>)
  (<o> ^name instantiate-task-argument
       ^argument <arg>
       ^arg-type after-clause
       ^pred-type duration
       ^number <num>
       ^unit <unit>)
-->
  (<arg> ^instantiation <i>)
  (<i> ^arg-type after-clause
       ^predicate <pred>)
  (<pred> ^type duration
          ^number <num>
          ^unit <unit>)
}

