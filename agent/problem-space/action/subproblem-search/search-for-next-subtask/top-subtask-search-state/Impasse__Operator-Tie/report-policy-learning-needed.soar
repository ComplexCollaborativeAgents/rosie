sp {subproblem*search*selection*propose*report-policy-learning-needed*top-selection
   (state <s> ^name selection
              ^problem-space.subproblem search
              ^top-state.task-stack.bottom <bot-task-seg>)
   (<bot-task-seg> -^policy-learning-needed)
-->
   (<s> ^operator <o> + =, >)
   (<o> ^name report-policy-learning-needed)
}

sp {subproblem*search*selection*apply*report-policy-learning-needed*mark*needed
   (state <s> ^name selection
              ^operator.name report-policy-learning-needed
              ^quiescence t
              ^top-state.task-stack.bottom <bot-task-seg>)
-->
   (<bot-task-seg> ^policy-learning-needed true)
}
