# If the word 'permanently' was used, use long-term memory, otherwise working memory
sp {op_remember1*elaborate*memory-type*ltm
   (state <s> ^name op_remember1
              ^task-operator <ssop>)
   (<ssop> ^modifier1.handle permanent1)
-->
   (<s> ^memory-type ltm)
}

sp {op_remember1*elaborate*memory-type*wm
   (state <s> ^name op_remember1
              ^task-operator <ssop>)
   (<ssop> -^modifier1.handle permanent1)
-->
   (<s> ^memory-type wm)
}

sp {op_remember1*elaborate*operator*perform*once
   (state <s> ^operator <o> +)
   (<o> ^name op_remember1)
-->
   (<o> ^perform once)
}
