###############################################################################
#
# Inside the execute-drive1 substate, this will put a drive command on the output link
#
###############################################################################

sp {op_drive1*propose*send-drive-command
   (state <s> ^name op_drive1
              ^problem-space.execution-type external
             -^current-task-segment.drive-command)
-->
   (<s> ^operator <o> +)
   (<o> ^name send-drive-command)
}

sp {op_drive1*apply*send-drive-command*ai2thor
   (state <s> ^name op_drive1
              ^operator.name send-drive-command
              ^agent-params.domain ai2thor
              ^current-task-segment <seg>
              ^top-state.io.output-link <out>)
-->
   (<out> ^perform-action <pa>)
   (<pa> ^name drive-forward)
   (<seg> ^drive-command <pa>)
}





# If we are going without a destination (e.g. Go until you see a door)
# or going to the end of the hall (e.g. Go to the end of the hall)
# Then we send a drive-forward command, which will just drive forward

sp {op_go-to1*propose*send-drive-forward-command
   (state <s> ^name op_go-to1
              ^problem-space.execution-type external
             -^task-operator.arg2
             -^current-task-segment.drive-forward-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-drive-forward-command)
}

sp {op_go-to1*propose*send-drive-forward-command*end
   (state <s> ^name op_go-to1
              ^problem-space.execution-type external
             ^task-operator.arg2.{2}.predicates.spatial-shape end1
             -^current-task-segment.drive-forward-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-drive-forward-command)
}

sp {op_go-to1*apply*send-drive-forward-command*no*until
   (state <s> ^name op_go-to1
              ^operator.name send-drive-forward-command
              ^current-task-segment <seg>
              ^top-state.io.output-link <out>)
#             -^until-clause)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name drive-forward
          ^termination-condition.name stabilized)
   (<seg> ^drive-forward-command <law>)
}

