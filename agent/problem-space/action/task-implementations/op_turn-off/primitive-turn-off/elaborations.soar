sp {primitive-turn-off*external*elaborate*problem-space*attend-to-all-perception
   (state <s> ^name primitive-turn-off
              ^problem-space.execution-type external
              ^problem-space.perception <p>)
-->
   (<p> ^attend-to-all-perception yes)
}

sp {primitive-turn-off*elaborate*target-object*superoperator
   (state <s> ^name primitive-turn-off
              ^task-operator.arg1.id <obj>)
-->
   (<s> ^target-object <obj>)
}

sp {primitive-turn-off*elaborate*executing-command*true
   (state <s> ^name primitive-turn-off
              ^current-task-segment.turn-off-command.status << sent executing >>)
-->
   (<s> ^executing-command true)
}

sp {primitive-turn-off*elaborate*propose-wait*true
   (state <s> ^name primitive-turn-off
              ^executing-command true)
-->
   (<s> ^propose-wait true)
}
