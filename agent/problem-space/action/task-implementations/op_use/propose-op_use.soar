### Propose op_use1 during task planning ###

### Propose filling something with water from a kettle
sp {problem-space*action*propose-subtasks*propose*op_use1*kettle*fillable
   (state <s> ^problem-space <ps>
              ^world.objects <objs>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<objs> ^object <obj1> <obj2>)
   (<obj1> ^predicates <p1>)
   (<p1> ^is-confirmed1 confirmed1
         ^is-grabbed1 grabbed1
         ^category kettle1)
   (<obj2> ^predicates <p2>)
   (<p2> ^is-confirmed1 confirmed1
         ^affordance1 fillable1
         ^contents1 empty1)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_use1 
         ^item-type task-operator
         ^task-handle use1
         ^arg1 <arg1>
         ^arg2 <arg2>)
   (<arg1> ^arg-type object
           ^id <obj1>)
   (<arg2> ^arg-type partial-predicate
           ^handle with1
           ^id <obj2>)
}

### Propose emptying something into the drain
sp {problem-space*action*propose-subtasks*propose*op_use1*fillable*drain
   (state <s> ^problem-space <ps>
              ^world.objects <objs>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<objs> ^object <obj1> <obj2>)
   (<obj1> ^predicates <p1>)
   (<p1> ^is-confirmed1 confirmed1
         ^is-grabbed1 grabbed1
         ^affordance1 fillable1
         ^contents1 { <con> <> empty1 })
   (<obj2> ^predicates <p2>)
   (<p2> ^is-confirmed1 confirmed1
         ^affordance1 drain1)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_use1 
         ^item-type task-operator
         ^task-handle use1
         ^arg1 <arg1>
         ^arg2 <arg2>)
   (<arg1> ^arg-type object
           ^id <obj1>)
   (<arg2> ^arg-type partial-predicate
           ^handle with1
           ^id <obj2>)
}

