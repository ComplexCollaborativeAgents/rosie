sp {op_ask*elaborate*target-object*superoperator
   (state <s> ^name op_ask1
              ^task-operator.arg1.id.predicates.sentence <sent>)
-->
   (<s> ^sentence <sent>)
}

#### CUSTOM GOAL HANDLING ####

sp {op_ask*elaborate*desired
   (state <s> ^name op_ask1
              ^task-operator.current-goal ask1goal1
             -^copy-task-goal)
-->
   (<s> ^desired <des>)
   (<des> ^handle ask1goal1 ^pred-count 0)
}

sp {op_ask*elaborate*desired*satisfied
   (state <s> ^name op_ask1
              ^added-answer <ans>
              ^desired <des>)
   (<des> ^handle ask1goal1)
-->
   (<des> ^satisfied true)
}

