sp {op_approach1*propose*handle-execution-failure
   (state <s> ^name op_approach1
              ^current-task-segment <seg>)
   (<seg> ^approach-command <cmd>)
   (<cmd> ^status << failure failed interrupted >>)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-execution-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}

sp {op_approach1*apply*handle-execution-failure*remove*command
   (state <s> ^name op_approach1
              ^operator <o>
              ^io.output-link <ol>)
   (<o> ^name handle-execution-failure
        ^task-segment <seg>
        ^command <cmd>)
   (<seg> ^approach-command <cmd>)
   (<ol> ^<cmd-name> <cmd>)
-->
   (<seg> ^approach-command <cmd> -)
   (<ol> ^<cmd-name> <cmd> -)
}
