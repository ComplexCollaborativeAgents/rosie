sp {op_say*elaborate*sentence-obj*task-operator*arg1
   (state <s> ^name op_say1
              ^task-operator.arg1.id <obj>)
-->
   (<s> ^sentence-obj <obj>)
}

sp {op_say*elaborate*sentence*task-operator*arg1
   (state <s> ^name op_say1
              ^sentence-obj.predicates.sentence <sent>)
-->
   (<s> ^sentence <sent>)
}

sp {op_say*elaborate*person*task-operator*arg2
   (state <s> ^name op_say1
              ^task-operator.arg2.{2} <person>)
-->
   (<s> ^person <person>)
}

#### CUSTOM GOAL HANDLING ####

sp {op_say*elaborate*desired
   (state <s> ^name op_say1
              ^task-operator.current-goal say1goal1
             -^copy-task-goal
             -^person)
-->
   (<s> ^desired <des>)
   (<des> ^handle say1goal1 ^pred-count 1 ^1 <p1>)
   (<p1> ^type execute-command ^command-name send-message)

}

# person
sp {op_say*elaborate*desired*person
   (state <s> ^name op_say1
              ^task-operator.current-goal say1goal1
             -^copy-task-goal
              ^sentence-obj <msg>
              ^person <person>)
-->
   (<s> ^desired <des>)
   (<des> ^handle say1goal1 ^pred-count 1 ^1 <p1>)
   (<p1> ^type relation ^handle heard2 ^1 <person> ^2 <msg>)
}


