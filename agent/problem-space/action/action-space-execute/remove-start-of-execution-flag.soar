# remove the start-of-execution flag when we first see the action

sp {action-space*execute*propose*remove-start-of-execution-flag
   (state <s> ^problem-space.action-space execute
              ^current-task-segment <seg>)
   (<seg> ^start-of-execution true)
-->
   (<s> ^operator <o> + >)
   (<o> ^name remove-start-of-execution-flag)
}

sp {action-space*execute*apply*remove-start-of-execution-flag
   (state <s> ^problem-space.action-space execute
              ^operator.name remove-start-of-execution-flag
              ^current-task-segment <seg>)
   (<seg> ^start-of-execution true)
-->
   (<seg> ^start-of-execution true -)
}
