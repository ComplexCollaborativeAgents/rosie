sp {action-space*execute*propose*init-current-subgoal
   (state <s> ^problem-space.action-space execute
              ^name <action-name>
              ^action-operator.name <action-name>
              ^action-operator <a>
              ^action-id.goal.{1}.handle <subgoal-handle>)
   (<a> -^current-subgoal)
-->
   (<s> ^operator <o> + >)
   (<o> ^name init-current-subgoal
        ^subgoal-handle <subgoal-handle>)
}

sp {action-space*execute*apply*init-current-subgoal
   (state <s> ^problem-space.action-space execute
              ^operator <o>
              ^action-operator <a>)
   (<o> ^name init-current-subgoal
        ^subgoal-handle <subgoal-handle>)
-->
   (<a> ^current-subgoal <subgoal-handle>)
}


