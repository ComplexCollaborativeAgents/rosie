# Elaborate: task-stack from superstate (link to top-state.task-stack)
sp {action-space*execute*elaborate*task-stack*from*superstate
   (state <s> ^problem-space.action-space execute
              ^superstate.task-stack <stack>)
-->
   (<s> ^task-stack <stack>)
}

# Elaborate: current-task-seg, the segment from the task-stack for the task-operator
sp {action-space*execute*elaborate*current-task-seg*from*superstate*child-task-seg
   (state <s> ^problem-space.action-space execute
              ^task-operator <o>
              ^superstate.child-task-seg <seg>)
   (<a> ^task-operator <o>)
-->
   (<s> ^current-task-seg <seg>)
}

# Elaborate: parent-task-seg, the previous action segment on the task-stack
sp {action-space*execute*elaborate*parent-task-seg
   (state <s> ^problem-space.action-space execute
              ^current-task-seg.prev { <parent> <> none })
-->
   (<s> ^parent-task-seg <parent>)
}

# Elaborate: child-task-seg, the next action segment on the task-stack 
sp {action-space*execute*elaborate*child-task-seg
   (state <s> ^problem-space.action-space execute
              ^current-task-seg.next { <child> <> none })
-->
   (<s> ^child-task-seg <child>)
}


