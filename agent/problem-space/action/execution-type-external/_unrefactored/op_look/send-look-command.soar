###############################################################################
#
# Inside the execute-look1 substate, this will put a look command on the output link
#
###############################################################################

sp {op_look1*propose*send-look-command
   (state <s> ^name op_look1
              ^problem-space.execution-type external
             -^current-action.look-command)
-->
   (<s> ^operator <o> +)
   (<o> ^name send-look-command)
}

sp {op_look1*apply*send-look-command*ai2thor
   (state <s> ^name op_look1
              ^operator.name send-look-command
              ^agent-params.domain ai2thor
              ^current-action <a>
              ^direction <dir>
              ^top-state.io.output-link <out>)
-->
   (<out> ^perform-action <pa>)
   (<pa> ^name look
         ^direction <dir>)
   (<a> ^look-command <pa>)
}
