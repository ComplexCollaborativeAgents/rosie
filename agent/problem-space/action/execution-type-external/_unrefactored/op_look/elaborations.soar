sp {op_look1*elaborate*direction*from*task-operator
   (state <s> ^name op_look1
              ^task-operator.arg1 <arg1>)
   (<arg1> ^arg-type concept
           ^handle <h>)
-->
   (<s> ^direction <h>)
}

###### SUCCESS ######

# elaborate goal (desired) at satisfied - look command reports it was successful
sp {op_look1*elaborate*desired*satisfied
   (state <s> ^name op_look1
              ^problem-space.execution-type external
              ^current-action.look-command.status success)
-->
   (<s> ^desired.satisfied true)
}

###### FAILURE ######

# execution-failure: The look command got a failure status
sp {op_look1*elaborate*failure*execution-failure
   (state <s> ^name op_look1
              ^problem-space.execution-type external
              ^current-action.look-command.status { <status> << error failure interrupted >> })
-->
   (<s> ^failure <f>)
   (<f> ^type execution-failure
        ^command look
        ^error-status <status>)
}
