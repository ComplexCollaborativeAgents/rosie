# elaborate problem-space attend-to-all-perception
sp {op_set-timer1*elaborate*problem-space*attend-to-all-perception*yes
   (state <s> ^name op_set-timer1
              ^problem-space.execution-type external
              ^problem-space.perception <p>)
-->
   (<p> ^attend-to-all-perception yes)
}

sp {op_set-timer1*elaborate*target-object*arg1
   (state <s> ^name op_set-timer1
              ^task-operator.arg1.id <obj>)
-->
   (<s> ^target-object <obj>)
   (interrupt)
}

sp {op_set-timer1*elaborate*desired-time*arg2
   (state <s> ^name op_set-timer1
              ^task-operator.arg2.{2}.number <t>)
-->
   (<s> ^desired-time <t>)
}

sp {op_set-timer1*elaborate*executing-command*true
   (state <s> ^name op_set-timer1
              ^current-task-segment.set-timer-command.status sent)
-->
   (<s> ^executing-command true)
}

sp {op_set-timer1*elaborate*allow-wait*true
   (state <s> ^name op_set-timer1
              ^executing-command true)
-->
   (<s> ^propose-wait true)
}

#### GOAL SATISFACTION ####
sp {op_set-timer1*elaborate*desired*satisfied
   (state <s> ^name op_set-timer1
              ^target-object.predicates.activation activated1)
-->
   (<s> ^desired.satisfied true)
}

