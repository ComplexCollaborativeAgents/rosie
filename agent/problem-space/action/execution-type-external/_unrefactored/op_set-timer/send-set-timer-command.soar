###############################################################################
#
# Inside the execute-set-timer1 substate, this will put a set-timer command on the output link
#
###############################################################################

sp {op_set-timer1*propose*send-set-timer-command
   (state <s> ^name op_set-timer1
             -^current-task-seg.set-timer-command
              ^target-object <obj>
              ^desired-time <t>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-set-timer-command
        ^object <obj>
        ^time <t>)
}

sp {op_set-timer1*apply*send-set-timer-command*ai2thor
   (state <s> ^name op_set-timer1
              ^operator <o>
              ^agent-params.domain ai2thor
              ^current-task-seg <a>
              ^top-state.io.output-link <out>)
   (<o> ^name send-set-timer-command
        ^object.handle <obj-handle>
        ^time <t>)
-->
   (<out> ^perform-action <pa>)
   (<pa> ^name set-timer
         ^object <obj-handle>
         ^time <t>)
   (<a> ^set-timer-command <pa>)
}

