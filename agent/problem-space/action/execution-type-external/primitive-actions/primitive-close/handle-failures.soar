#### Different failure cases that can arise during close

#### What if close fails twice? 

sp {primitive-close*propose*handle-execution-failure
   (state <s> ^name primitive-close
              ^current-task-segment <seg>)
   (<seg> ^close-command <cmd>)
   (<cmd> ^status << failure interrupted >>)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-execution-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}

sp {primitive-close*propose*handle-command-failure
   (state <s> ^name primitive-close
              ^current-task-segment <seg>)
   (<seg> ^close-command <cmd>)
   (<cmd> ^status error)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-command-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}

