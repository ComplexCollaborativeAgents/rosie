#### Different failure cases that can arise during turn-off

#### What if turn-off fails twice? 

sp {primitive-turn-off*propose*handle-execution-failure
   (state <s> ^name primitive-turn-off
              ^current-task-segment <seg>)
   (<seg> ^turn-off-command <cmd>)
   (<cmd> ^status << failure interrupted >>)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-execution-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}

sp {primitive-turn-off*propose*handle-command-failure
   (state <s> ^name primitive-turn-off
              ^current-task-segment <seg>)
   (<seg> ^turn-off-command <cmd>)
   (<cmd> ^status error)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-command-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}
