#### Different failure cases that can arise during open

#### What if open fails twice? 

sp {primitive-open*propose*handle-execution-failure
   (state <s> ^name primitive-open
              ^current-task-segment <seg>)
   (<seg> ^open-command <cmd>)
   (<cmd> ^status << failure interrupted >>)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-execution-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}

sp {primitive-open*propose*handle-command-failure
   (state <s> ^name primitive-open
              ^current-task-segment <seg>)
   (<seg> ^open-command <cmd>)
   (<cmd> ^status error)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-command-failure
        ^category failure-handling
        ^task-segment <seg>
        ^command <cmd>)
}
