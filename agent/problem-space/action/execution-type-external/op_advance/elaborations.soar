# Attend to perception during drive commands
sp {op_advance1*elaborate*problem-space*attend-to-all-perception*during*commands
   (state <s> ^name op_advance1
              ^problem-space.execution-type external
              ^current-action.drive-command <cmd>
              ^problem-space.perception <p>)
-->
   (<p> ^attend-to-all-perception yes)
}

sp {op_advance1*elaborate*executing-command
   (state <s> ^name op_advance1
              ^problem-space.execution-type external
              ^current-action.drive-command <cmd>)
   (<cmd> ^status << sent executing >>)
-->
   (<s> ^executing-command true)
}

sp {op_advance1*elaborate*propose-wait
   (state <s> ^name op_advance1
              ^problem-space.execution-type external
              ^executing-command true)
-->
   (<s> ^propose-wait true)
}

#### GOAL SATISFACTION ####

sp {op_advance1*elaborate*desired*satisfied*finished-drive
   (state <s> ^name op_advance1
              ^problem-space.execution-type external
              ^current-action.drive-command.status success)
-->
   (<s> ^desired.satisfied true)
}

