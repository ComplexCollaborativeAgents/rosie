sp {op_turn-off1*internal*propose*perform-turn-off
   (state <s> ^name op_turn-off1
              ^agent-params.domain internal
              ^problem-space.execution-type external
              ^target-object.predicates.activation1 on2)
-->
   (<s> ^operator <o> +)
   (<o> ^name perform-turn-off)
}

sp {op_turn-off1*internal*apply*perform-turn-off
   (state <s> ^name op_turn-off1
              ^agent-params.domain internal
              ^problem-space.execution-type external
              ^operator.name perform-turn-off
              ^object-info.input-link-obj.property <il-prop>)
   (<il-prop> ^property-handle activation1
              ^values <vals>)
-->
   (<vals> ^on2 1.00 -
           ^off2 1.00)
}

sp {op_turn-off1*internal*prefer*attend-to-scene-change*over*perform-turn-off
   (state <s> ^name op_turn-off1
              ^agent-params.domain internal
              ^problem-space.execution-type external
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name << push-task-segment pop-task-segment attend-to-scene-change >>)
   (<o2> ^name perform-turn-off)
-->
   (<s> ^operator <o1> > <o2>)
}
