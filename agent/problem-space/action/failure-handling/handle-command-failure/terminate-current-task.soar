
sp {handle-command-failure*propose*terminate-current-task
   (state <s> ^name handle-command-failure
              ^task-segment <seg>)
-->
   (<s> ^operator <o> + <)
   (<o> ^name terminate-current-task)
}

sp {handle-command-failure*apply*terminate-current-task*add*failure*status
   (state <s> ^name handle-command-failure
              ^operator.name terminate-current-task
              ^task-segment <seg>)
-->
   (<seg> ^unrecoverable-failure command-failure)
}

sp {handle-command-failure*apply*terminate-current-task*send*message*command-failure
   (state <s> ^name handle-command-failure
              ^operator.name terminate-current-task
             -^silent true
              ^task-segment.command-operator.task-handle <task-handle>
              ^failed-command.name <cmd-name>
              ^top-state.interaction.changes <chgs>)
-->
   (<chgs> ^outgoing-message <msg>)
   (<msg> ^type command-failure
          ^complete-message true
          ^fields <f>)
   (<f> ^task-handle <task-handle>
        ^command-name <cmd-name>)
}

sp {handle-command-failure*apply*terminate-current-task*send*message*command-failure
   (state <s> ^name handle-command-failure
              ^operator.name terminate-current-task
              ^failed-command <cmd>)
-->
   (write |The following command resulted in an error:|  (crlf))
   (write (cmd print <cmd> -d 3)  (crlf))
}
