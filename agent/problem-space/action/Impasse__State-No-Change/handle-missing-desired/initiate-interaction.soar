# If there is no goal, ask the instructor

sp {handle-missing-desired*propose*initiate-interaction*get-next-goal
   (state <s> ^name handle-missing-desired
             -^desired
              ^task-operator <task-op>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name initiate-interaction
        ^type get-next-goal
        ^task-operator <task-op>)
}

sp {handle-missing-desired*apply*initiate-interaction*get-next-goal*mark*learning*needed
   (state <s> ^name handle-missing-desired
              ^operator <o>
              ^quiescence t
              ^superstate.superstate.current-task-segment <seg>)
   (<o> ^name initiate-interaction
        ^type get-next-goal)
-->
   (<seg> ^policy-learning-needed true)
}

