###############################################################################
#
# Inside the execute-give1 substate, this will put a face command on the output link
#
###############################################################################

sp {op_give1*propose*send-face-command
   (state <s> ^name op_give1
              ^person-position <pos>
              ^calculations.theta <yaw>
             -^current-action.face-command
             ^world.robot.arm.state external)
-->
   (<s> ^operator <o> + )
   (<o> ^name send-face-command
        ^yaw <yaw>)
}

sp {op_give1*apply*send-face-command
   (state <s> ^name op_give1
              ^operator <o>
              ^current-action <a>
              ^top-state.io.output-link <out>)
   (<o> ^name send-face-command
        ^yaw <yaw>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name orient
          ^parameters.yaw <yaw>
          ^termination-condition.name stabilized)
   (<a> ^face-command <law>)
}
