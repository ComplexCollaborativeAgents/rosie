# Elaborate action-operator from superoperator
sp {add-subtask-to-tcn*elaborate*default-problem-space*no
   (state <s> ^name add-subtask-to-tcn)
-->
   (<s> ^default-problem-space no)
}

sp {add-subtask-to-tcn*elaborate*action
   (state <s> ^name add-subtask-to-tcn
              ^superstate.operator.action-operator <action>)
-->
   (<s> ^action-operator <action>)
}

# Elaborate the subtask operator representation from the superoperator
sp {add-subtask-to-tcn*elaborate*subtask
   (state <s> ^name add-subtask-to-tcn
              ^superstate.operator.subtask <sub>)
-->
   (<s> ^subtask <sub>)
}
