# Rename the until-clause as a predicate-set

sp {generalize-task-operator*generalize-task-argument*elaborate*until-clause*as*predicate-set
  (state <s> ^name generalize-task-operator
             ^generalize-task-argument <ga>)
  (<ga> ^instantiation.arg-type until-clause)
-->
  (<ga> ^arg-type predicate-set)
}

sp {generalize-task-operator*apply*generalize-task-operator*copy*arg-type*until-clause
   (state <s> ^name generalize-task-operator
              ^generalize-task-argument <arg>
              ^operator.name complete-generalize-task-operator)
   (<arg> ^instantiation.arg-type until-clause
          ^general-arg-rep <gen-rep>)
-->
   (<gen-rep> ^arg-type until-clause)
}