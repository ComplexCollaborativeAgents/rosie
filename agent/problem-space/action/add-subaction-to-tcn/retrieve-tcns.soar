## Do an smem query to lookup the smem info about the action
sp {add-subaction-to-tcn*elaborate*smem-query*action*handle
   (state <s> ^name add-subaction-to-tcn
              ^action-operator.action-handle <action-handle>)
-->
   (<s> ^smem-query <query>)
   (<query> ^cue <cue>
            ^depth 10)
   (<cue> ^handle <action-handle>)
}

# Elaborate task-concept-network from the result of the smem query
sp {add-subaction-to-tcn*elaborate*task-concept-network*from*smem-query
   (state <s> ^name add-subaction-to-tcn
              ^action-operator.action-handle <action-handle>
              ^smem-query.result <res>)
   (<res> ^handle <action-handle>)
-->
   (<s> ^task-concept-network <res>)
}
## Do an smem query to lookup the smem info about the subaction
sp {add-subaction-to-tcn*elaborate*smem-query*subaction*handle
   (state <s> ^name add-subaction-to-tcn
              ^subaction.action-handle <action-handle>)
-->
   (<s> ^smem-query <query>)
   (<query> ^cue <cue>
            ^depth 10)
   (<cue> ^handle <action-handle>)
}

# Elaborate subaction-tcn from the result of the smem query
sp {add-subaction-to-tcn*elaborate*subaction-tcn*from*smem-query
   (state <s> ^name add-subaction-to-tcn
              ^subaction.action-handle <action-handle>
              ^smem-query.result <res>)
   (<res> ^handle <action-handle>)
-->
   (<s> ^subaction-tcn <res>)
}
