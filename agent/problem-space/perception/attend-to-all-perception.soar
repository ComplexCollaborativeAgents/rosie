# problem-space.perception.attend-to-all-perception << yes no >>
#   If yes, for any top-state.perception-monitor.discrepancies.discrepancy
#     it will propose attend-to-perception for that

sp {problem-space*perception*attend-to-all-perception*yes*propose*attend-to-perception
   (state <s> ^problem-space.perception.attend-to-all-perception yes
              ^top-state.perception-monitor.discrepancies.<disc-type> <disc>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name attend-to-perception
        ^discrepancy-type <disc-type>
        ^discrepancy-info <disc>)
}

sp {problem-space*perception*attend-to-all-perception*yes*propose*attend-to-world-change
   (state <s> ^problem-space.perception.attend-to-all-perception yes
              ^top-state.perception-monitor.world-changes.<change-type> <change>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name attend-to-world-change
        ^change-type <change-type>
        ^change-info <change>)
}
