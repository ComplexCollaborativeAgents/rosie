# When the handle-type-execute substate is finished (no other operators)
#    create a new task segment to be pushed onto the task-stack
                                                        
sp {handle-type-execute*propose*create-new-task-segment
   (state <s> ^name handle-type-execute
              ^task-operator <op>
             -^new-task-segment)
-->
   (<s> ^operator <o> +)
   (<o> ^name create-new-task-segment)
}

sp {handle-type-execute*apply*create-new-task-segment
   (state <s> ^name handle-type-execute
              ^operator.name create-new-task-segment
              ^command-message <msg>
              ^task-operator <op>)
   (<msg> -^task-source)
-->
   (<s> ^new-task-segment <task>)
   (<task> ^task-operator <op>)
}

sp {handle-type-execute*apply*create-new-task-segment*task-subtask
   (state <s> ^name handle-type-execute
              ^operator.name create-new-task-segment
              ^command-message <msg>
              ^task-operator <op>)
   (<msg> ^task-source <src>)
-->
   (<s> ^new-task-segment <task>)
   (<task> ^task-source <src>
           ^task-operator <op>)
}

