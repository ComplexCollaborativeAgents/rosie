sp {learn-whenever-task*propose*construct-task-operator
   (state <s> ^name learn-whenever-task
              ^command-message <msg>
              ^task-concept-network <tcn>
             -^task-operator)
-->
   (<s> ^operator <o> +)
   (<o> ^name construct-task-operator
        ^command-message <msg>
        ^update-task-concept-network true)
}

