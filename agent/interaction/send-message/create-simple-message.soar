sp {send-message*propose*create-simple-message
   (state <s> ^name send-message
              ^message <msg>
             -^created-message)
   (<msg> ^type simple-message
          ^message-type <type>)
-->
   (<s> ^operator <o> +)
   (<o> ^name create-simple-message
        ^message-type <type>)
}

sp {send-message*apply*create-simple-message
   (state <s> ^name send-message
              ^operator <o>)
   (<o> ^name create-simple-message
        ^message-type <type>)
-->
   (<s> ^created-message <msg>)
   (<msg> ^type <type>
          ^originator agent
          ^fields <f>)
}

